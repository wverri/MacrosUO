function trainChivalry() {
    while (true) {
        var skill = Player.SkillValue('Chivalry');
        var spell;
        var manaRequired;
        var requiresTarget = false;

        if (skill < 45) {
            spell = 'Consecrate Weapon'; // Spell ID: 202
            manaRequired = 10;
        } else if (skill < 60) {
            spell = 'Divine Fury'; // Spell ID: 206
            manaRequired = 15;
        } else if (skill < 70) {
            spell = 'Enemy of One'; // Spell ID: 208
            manaRequired = 20;
        } else if (skill < 90) {
            spell = 'Holy Light'; // Spell ID: 211
            manaRequired = 25;
        } else {
            spell = 'Noble Sacrifice'; // Spell ID: 212
            manaRequired = 30;
            requiresTarget = true;
        }

        if (Player.Mana() >= manaRequired) {
            Orion.Cast(spell);
            if (requiresTarget) {
                Orion.WaitForTarget(5000);
                Orion.TargetObject(Player.Serial()); // Target self
            }
        } else {
            while (Player.Mana() < Player.ManaMax()) {
                Orion.UseSkill('Meditation');
                Orion.Wait(5000);
            }
        }
        Orion.Wait(1000);
    }
}

trainChivalry();
